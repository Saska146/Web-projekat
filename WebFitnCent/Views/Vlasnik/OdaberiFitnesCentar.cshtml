
@{
    ViewBag.Title = "OdaberiFitnesCentar";
}
@using WebFitnCent.Models

<link href="~/Css/PrijavaRegistracija.css" rel="stylesheet" type="text/css" />
<div class="login-block">

    <a href="~/Neprijavljeni/Opcije">Povratak na Opcije</a>
    <h1>Modifikacija </h1>
    @if (((List<FitnesCentar>)ViewData["fitnesCentriZaPrikaz"]).Count == 0)
    {
        <p>Trenutna Nemate Nijedan Fitnes Centar</p>
    }
    else
    {
        <form method="post" action="~/Vlasnik/Modifikuj">
            <select name="id">
                @foreach (var item in (List<FitnesCentar>)ViewData["fitnesCentriZaPrikaz"])
                {
                    <option value="@item.Id">@item.Naziv</option>

                }
            </select>
            <input type="submit" id="submit" value="Odaberi Fitnes Centar">
        </form>
        <form method="post" action="~/Vlasnik/Izbrisi">
            <h1>Brisanje</h1>
            <select name="id">
                @foreach (var item in (List<FitnesCentar>)ViewData["fitnesCentriZaPrikaz"])
                {
                    <option value="@item.Id">@item.Naziv</option>

                }
            </select>
            <input type="submit" id="submit" value="Odaberi Fitnes Centar">
        </form>
    }

</div>

