
@{
    ViewBag.Title = "Kreiraj";
}
<link href="~/Css/PrijavaRegistracija.css" rel="stylesheet" type="text/css" />

<div class="login-block">
    <h1>Kreiraj Fitnes Centar</h1>
    <p id="greska">@ViewData["Greska"]</p>
    <a href="~/Neprijavljeni/Opcije">Povratak na Opcije</a>
    <form method="post" action="~/Trener/Dodaj">
        <input type="text" name="nzv" placeholder="Naziv" id="polje" required />
        <input type="text" name="tip" placeholder="Tip Treninga" id="polje" required />
        <input type="number" name="trajanje" placeholder="Trajanje Treninga" id="polje" required />

        <input type="datetime-local" name="datumivr" placeholder="Datum i Vreme" id="polje" required />
        <input type="number" name="makspos" placeholder="Maksimalan Broj Posetilaca" id="polje" required />

        <input type="submit" id="submit" value="Dodaj Grupni Trening">
    </form>
</div>
